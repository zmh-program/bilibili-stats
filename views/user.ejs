                    <% for (const n in sign) { %><text class="description" x="10" y="<%- n * 20 %>"> <%- sign[n] %> </text><% } %>
                </g></g>
            <g transform="translate(0, 0)"><g class="anim" style="animation-delay: 600ms" transform="translate(36, <%- 300 + (sign.length * 14)%>)">
                    <text class="info" x="0" y="0">等级: <%- level %></text>
                </g></g>
            <g transform="translate(0, 0)"><g class="anim" style="animation-delay: 800ms" transform="translate(36, <%- 325 + (sign.length * 14)%>)">
                    <text class="info" x="0" y="0">性别: <%- sex %></text>
                </g></g>
            <g transform="translate(0, 0)"><g class="anim" style="animation-delay: 800ms" transform="translate(36, <%- 350 + (sign.length * 14)%>)">
                    <text class="info" x="0" y="0">UID: <%- uid %></text>
                </g></g>
        </svg>
    </g>
    <g data-testid="follow-info" transform="translate(405, 55)"><svg x="0" y="0">
            <g transform="translate(0, 0)"><g class="anim" style="animation-delay: 1000ms" transform="translate(6.5, 140)">
                    <rect x="0" y="0" rx="4.5" height="80" stroke="#e4e2e2" fill="#fff" width="240" stroke-opacity="1"/>
                </g></g>
            <g transform="translate(0, 0)"><g transform="translate(58, 175)">
                    <text class="info anim" style="animation-delay: 1400ms" x="80" y="0"><%- following %></text>
                    <text class="info anim" style="animation-delay: 1200ms" x="0" y="0">关注数</text>
                </g></g>
            <g transform="translate(0, 0)"><g transform="translate(58, 195)">
                    <text class="info anim" style="animation-delay: 1400ms" x="80" y="0"><%- follower %></text>
                    <text class="info anim" style="animation-delay: 1200ms" x="0" y="0">粉丝数</text>
                </g></g>
        </svg>
    </g>
