        text { fill: rgba(50,50,50,.8) }
        .name { font-weight: 700; font-size: 18px }
        .official { font-size: 14px; font-weight: 600; max-width: 300px; height: max-content; word-wrap: anywhere }
        .description { font-size: 12px; font-weight: 600; max-width: 300px; height: max-content; word-wrap: anywhere }
        .info { font-size: 12px; font-weight: 600 }
        .type { font-size: 14px; font-weight: 600 }
