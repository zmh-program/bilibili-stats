<svg width="540" viewBox="0 0 660 490" fill="none" xmlns="http://www.w3.org/2000/svg" role="img" aria-labelledby="descId">
    <title id="titleId"><%- name %></title><desc id="descId">BiliBili Statistic</desc>
    <style>
        * { "PingFang SC",Helvetica Neue,Microsoft YaHei,sans-serif }
        text { fill: rgba(50,50,50,.8) }
        .name { font-weight: 700; font-size: 18px }
        .official { font-size: 14px; font-weight: 600; max-width: 300px; height: max-content; word-wrap: anywhere }
        .description { font-size: 12px; font-weight: 600; max-width: 300px; height: max-content; word-wrap: anywhere }
        .info { font-size: 12px; font-weight: 600 }
        .level { fill: #fff; background: red; width: 20px; height: 20px; padding: 2px }
        .oct-icon{display:block;fill:#8b849e;}
        .stat{font:600 14px 'Segoe UI',Ubuntu,"Helvetica Neue",Sans-Serif;}
        .anim{opacity:0;animation:fadeInAnimation 0.3s ease-in-out forwards;}
        .icon{fill:#4c71f2;display:none;}
        .lang-name{font:400 11px "Segoe UI",Ubuntu,Sans-Serif}
        #rect-mask rect{animation:fadeInAnimation 1s ease-in-out forwards;}
        @keyframes fadeInAnimation{from{opacity:0;}to{opacity:1;}}
    </style>
    <rect x="0.5" y="0.5" rx="4.5" height="99%" stroke="#e4e2e2" fill="#f4f5f7" width="659" stroke-opacity="1"/>
    <svg x="-4" y="2" height="180" width="660" style="border-radius: 10px; overflow: hidden" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"><image x="0" y="0" height="204" width="1320" xlink:href="<%- background %>"></image></svg>
    <g data-testid="up-info" transform="translate(0, 55)"><svg x="0" y="0">
            <g transform="translate(0, 0)"><g class="anim" style="animation-delay: 200ms" transform="translate(6.5, 140)">
                    <rect x="0" y="0" rx="4.5" height="280" stroke="#e4e2e2" fill="#fff" width="400" stroke-opacity="1"/>
                    <svg x="15" y="15" xmlns="http://www.w3.org/2000/svg" width="64" height="64" style="border-radius: 50%; overflow: hidden" xmlns:xlink="http://www.w3.org/1999/xlink"><image x="0" y="0" height="64" width="64" xlink:href="<%- avatar %>"></image></svg>
                    <text class="name" x="90" y="40" data-testid="stars"><%- name %></text>
                    <svg x="90" y="30" xmlns="http://www.w3.org/2000/svg" width="64" height="64" style="border-radius: 50%; overflow: hidden" xmlns:xlink="http://www.w3.org/1999/xlink"><image x="0" y="0" height="64" width="64" xlink:href="<%- vip %>"></image></svg>
                </g></g>
            <% if (official) { %>
            <g transform="translate(0, 0)"><g class="anim" style="animation-delay: 400ms" transform="translate(32.5, 245)">
